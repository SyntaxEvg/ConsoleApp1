# Сохраняем новый конфиг
sudo nano /etc/nginx/conf.d/wordpress-ssl.conf
# Вставьте конфиг выше, сохраните (Ctrl+O, Enter, Ctrl+X)

# Проверяем синтаксис
sudo nginx -t

# Если OK, применяем
sudo systemctl reload nginx

# Очищаем кэш
sudo rm -rf /var/cache/nginx/wordpress/*
sudo systemctl restart nginx

# Регенерируем CSS Elementor
cd /var/www
sudo -u nginx wp elementor flush_css --allow-root

# Перезапускаем PHP-FPM
sudo systemctl restart php-fpm

# Триггерим создание CSS
curl -sk https://ea.ty.ea > /dev/null
sleep 2

# Проверяем
ls -la /var/www/wp-content/uploads/elementor/css/

echo "✅ Конфиг обновлён! Откройте https://ea.ty.ea"
