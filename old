// Логирование всех HTTP запросов WordPress
add_action('http_api_debug', function($response, $context, $class, $args, $url) {
    error_log(sprintf(
        "WordPress HTTP Request:\nURL: %s\nMethod: %s\nResponse Code: %s\n---\n",
        $url,
        isset($args['method']) ? $args['method'] : 'GET',
        is_wp_error($response) ? 'ERROR' : wp_remote_retrieve_response_code($response)
    ));
}, 10, 5);

// Отключить обновление переводов
define('DISALLOW_FILE_MODS', true); // Отключает все обновления
// или только переводы:
add_filter('auto_update_translation', '__return_false');

define('WP_HTTP_BLOCK_EXTERNAL', true);
define('WP_ACCESSIBLE_HOSTS', ''); // Пустое = блокировать всё


sudo nano /var/www/wp-content/themes/bizup/functions.php
// Отключить автоматическую загрузку переводов
remove_action('init', 'wp_schedule_update_checks');
add_filter('auto_update_translation', '__return_false');	
