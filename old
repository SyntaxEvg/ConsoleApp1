function wp_check_blocked_domain($url) {
    $blocked_domains = array(
        'api.wordpress.org',
        'wordpress.org',
        'downloads.wordpress.org',
        's.w.org',
        'ps.w.org',
    );
    
    $host = parse_url($url, PHP_URL_HOST);
    
    // –í–°–ï–ì–î–ê –ª–æ–≥–∏—Ä—É–µ–º –í–°–ï –∑–∞–ø—Ä–æ—Å—ã
    error_log("üåê HTTP REQUEST: $url (Host: $host)");
    
    foreach ($blocked_domains as $blocked) {
        if ($host === $blocked || strpos($host, $blocked) !== false) {
            error_log("üö´ BLOCKED: $url");
            return true;
        }
    }
    
    error_log("‚úÖ ALLOWED: $url");
    return false;
}
