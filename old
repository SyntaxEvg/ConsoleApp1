# Удалить все строки со scheme для Typography
sudo find /var/www/wp-content/plugins/widgets/ -type f -name "*.php" -exec sed -i "/\s*'scheme'\s*=>\s*Typography::/d" {} \;

# Удалить все строки со scheme для Color
sudo find /var/www/wp-content/plugins/widgets/ -type f -name "*.php" -exec sed -i "/\s*'scheme'\s*=>\s*Color::/d" {} \;

# Удалить use для старых классов
sudo find /var/www/wp-content/plugins/widgets/ -type f -name "*.php" -exec sed -i "/use Elementor\\\\Core\\\\Schemes\\\\Typography;/d" {} \;
sudo find /var/www/wp-content/plugins/widgets/ -type f -name "*.php" -exec sed -i "/use Elementor\\\\Core\\\\Schemes\\\\Color;/d" {} \;
