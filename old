# Исправляем $x на $unique
sed -i 's/echo esc_attr(\$x)/echo esc_attr($unique)/g' /var/www/wp-content/plugins/widgets/team-member/team-grid-widget.php

# Исправляем $show_email на mailto ссылку
sed -i 's/echo esc_html(\$show_email)/echo esc_attr("mailto:" . $settings["email"])/g' /var/www/wp-content/plugins/widgets/team-member/team-grid-widget.php

