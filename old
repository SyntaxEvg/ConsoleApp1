// Если у вас есть доступ к Vue инстансу через window
window.app.yourDateVariable = '2025-11-17'

// Или найдите элемент DOM и получите Vue инстанс
let element = document.querySelector('.calendar-selector')
element.__vue__.dateProperty = new Date('2025-11-17')

// Найти все input с датой
document.querySelector('input[type="date"]').value = '2025-11-17'

// Или изменить атрибут
document.querySelector('.date-picker').setAttribute('value', '2025-11-17')

// Вызвать событие, чтобы Vue среагировал
let event = new Event('input', { bubbles: true })
document.querySelector('input[type="date"]').dispatchEvent(event)
