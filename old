Создай или отредактируй файл %AppData%\NuGet\NuGet.Config:
xml<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <!-- Отключаем стандартный nuget.org -->
    <clear />
    <!-- Только локальный источник -->
    <add key="LocalPackages" value="C:\путь\к\локальным\пакетам" />
  </packageSources>
  
  <disabledPackageSources>
    <add key="nuget.org" value="true" />
  </disabledPackageSources>
</configuration>
