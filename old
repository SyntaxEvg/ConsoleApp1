phpprivate function create_or_update_user($user_info) {
    error_log('========================================');
    error_log('ADFS: –°–û–ó–î–ê–ù–ò–ï/–û–ë–ù–û–í–õ–ï–ù–ò–ï –ü–û–õ–¨–ó–û–í–ê–¢–ï–õ–Ø WORDPRESS');
    error_log('========================================');
    error_log('ADFS: –ü–æ–ª—É—á–µ–Ω–Ω—ã–µ –¥–∞–Ω–Ω—ã–µ: ' . print_r($user_info, true));
    
    // –ü—Ä–æ–≤–µ—Ä—è–µ–º –Ω–∞–ª–∏—á–∏–µ email
    if (empty($user_info['email'])) {
        error_log('ADFS: ‚ùå Email –æ—Ç—Å—É—Ç—Å—Ç–≤—É–µ—Ç!');
        error_log('ADFS: –î–æ—Å—Ç—É–ø–Ω—ã–µ –ø–æ–ª—è: ' . implode(', ', array_keys($user_info)));
        
        return new WP_Error(
            'no_email',
            'ADFS –Ω–µ –≤–µ—Ä–Ω—É–ª email –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è. –ü—Ä–æ–≤–µ—Ä—å—Ç–µ –Ω–∞—Å—Ç—Ä–æ–π–∫–∏ Claim Rules –Ω–∞ ADFS —Å–µ—Ä–≤–µ—Ä–µ.',
            $user_info
        );
    }
    
    $email = sanitize_email($user_info['email']);
    
    // –û–ø—Ä–µ–¥–µ–ª—è–µ–º username (–ø—Ä–∏–æ—Ä–∏—Ç–µ—Ç: preferred_username > upn > email)
    if (!empty($user_info['preferred_username'])) {
        $username = sanitize_user($user_info['preferred_username'], true);
    } elseif (!empty($user_info['upn'])) {
        $username = sanitize_user($user_info['upn'], true);
    } else {
        $username = sanitize_user($email, true);
    }
    
    error_log('ADFS: Email: ' . $email);
    error_log('ADFS: Username: ' . $username);
    
    // –û–ø—Ä–µ–¥–µ–ª—è–µ–º display name
    if (!empty($user_info['name'])) {
        $display_name = $user_info['name'];
    } elseif (!empty($user_info['given_name']) && !empty($user_info['family_name'])) {
        $display_name = $user_info['given_name'] . ' ' . $user_info['family_name'];
    } else {
        $display_name = $username;
    }
    
    error_log('ADFS: Display Name: ' . $display_name);
    
    // –ò—â–µ–º —Å—É—â–µ—Å—Ç–≤—É—é—â–µ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –ø–æ email
    $user = get_user_by('email', $email);
    
    // –ï—Å–ª–∏ –Ω–µ –Ω–∞–π–¥–µ–Ω –ø–æ email, –∏—â–µ–º –ø–æ meta adfs_sid (sub)
    if (!$user && !empty($user_info['sub'])) {
        error_log('ADFS: –ü–æ–∏—Å–∫ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è –ø–æ sub: ' . $user_info['sub']);
        
        $users = get_users(array(
            'meta_key' => 'adfs_sid',
            'meta_value' => $user_info['sub'],
            'number' => 1,
        ));
        
        if (!empty($users)) {
            $user = $users[0];
            error_log('ADFS: ‚úì –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–∞–π–¥–µ–Ω –ø–æ sub');
        }
    }
    
    if (!$user) {
        // –°–æ–∑–¥–∞—ë–º –Ω–æ–≤–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        error_log('ADFS: –°–æ–∑–¥–∞—é –Ω–æ–≤–æ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è...');
        
        $user_data = array(
            'user_login' => $username,
            'user_email' => $email,
            'display_name' => $display_name,
            'first_name' => $user_info['given_name'] ?? '',
            'last_name' => $user_info['family_name'] ?? '',
            'role' => 'subscriber',
            'user_pass' => wp_generate_password(20, true, true),
        );
        
        error_log('ADFS: –î–∞–Ω–Ω—ã–µ –¥–ª—è —Å–æ–∑–¥–∞–Ω–∏—è: ' . print_r($user_data, true));
        
        $user_id = wp_insert_user($user_data);
        
        if (is_wp_error($user_id)) {
            error_log('ADFS: ‚ùå –û—à–∏–±–∫–∞ —Å–æ–∑–¥–∞–Ω–∏—è –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è: ' . $user_id->get_error_message());
            return $user_id;
        }
        
        $user = get_user_by('id', $user_id);
        
        // –°–æ—Ö—Ä–∞–Ω—è–µ–º –º–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ ADFS
        update_user_meta($user_id, 'adfs_user', true);
        update_user_meta($user_id, 'adfs_sid', $user_info['sub'] ?? '');
        update_user_meta($user_id, 'adfs_upn', $user_info['upn'] ?? '');
        
        error_log('ADFS: ‚úÖ –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å —Å–æ–∑–¥–∞–Ω —Å ID: ' . $user_id);
        
    } else {
        // –û–±–Ω–æ–≤–ª—è–µ–º —Å—É—â–µ—Å—Ç–≤—É—é—â–µ–≥–æ –ø–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—è
        error_log('ADFS: ‚úì –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –Ω–∞–π–¥–µ–Ω, –æ–±–Ω–æ–≤–ª—è—é –¥–∞–Ω–Ω—ã–µ...');
        
        $update_data = array(
            'ID' => $user->ID,
            'display_name' => $display_name,
            'first_name' => $user_info['given_name'] ?? $user->first_name,
            'last_name' => $user_info['family_name'] ?? $user->last_name,
        );
        
        wp_update_user($update_data);
        
        // –û–±–Ω–æ–≤–ª—è–µ–º –º–µ—Ç–∞–¥–∞–Ω–Ω—ã–µ
        update_user_meta($user->ID, 'adfs_user', true);
        update_user_meta($user->ID, 'adfs_sid', $user_info['sub'] ?? '');
        update_user_meta($user->ID, 'adfs_upn', $user_info['upn'] ?? '');
        
        error_log('ADFS: ‚úÖ –ü–æ–ª—å–∑–æ–≤–∞—Ç–µ–ª—å –æ–±–Ω–æ–≤–ª—ë–Ω (ID: ' . $user->ID . ')');
    }
    
    error_log('========================================');
    
    return $user;
}

